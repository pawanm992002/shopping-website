</head>
<body>
   
    {{>navbar}}
    <main class="mainContainer">
        <!-- aside section -->
        <aside class = aside>
            <div class="categories">
                <li class="categoriesType">
                    <span class= "categorieshead">Categories</span>
                </li>
                <li class="categoriesType">
                    <a href="/mobiles" class= "categoriesItem">Mobiles and accessories</a>
                </li>
                <li class="categoriesType">
                    <a href="/electronics" class= "categoriesItem">Electronics appliances</a>
                </li>
                <li class="categoriesType">
                    <a href="/fashion" class= "categoriesItem">Fashion trends</a>
                </li>
                <li class="categoriesType">
                    <a href="/home" class= "categoriesItem">Home products</a>
                </li>
                <li class="categoriesType">
                    <a href="/grocery" class= "categoriesItem">Grocery items</a>
                </li>
                <li class="categoriesType">
                    <a href="/beauty" class= "categoriesItem">Beauty products</a>
                </li>
                <li class="categoriesType">
                    <a href="/toys" class= "categoriesItem">Baby products and toys</a>
                </li>
                <li class="categoriesType">
                    <a href="/study" class= "categoriesItem">Study material</a>
                </li>
                <li class="categoriesType">
                    <a href="/kichen" class= "categoriesItem">kichen items</a>
                </li>
                <li class="categoriesType">
                    <a href="/sports" class= "categoriesItem">sports, fitness products</a>
                </li>
            </div>
        </aside>
        
        <!-- main section -->

        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="images/istockphoto-1315699311-170667a.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="images/istockphoto-1325985224-170667a.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="images/tablet-314153__340.webp" class="d-block w-100" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
</div>









